@model CSSEntity.Trip

@{
    Layout = "~/Views/Shared/_layout_for_trips.cshtml";
}
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="~/Scripts/jquery-ui-1.8.9.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.ui.datepicker.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/myScript.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
</head>

<h2>Assign New Trip</h2><br />
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Select Employee and Vehicle For Trip :</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TripDate, htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.EditorFor(model => Session["FinalTripDate"], new { htmlAttributes = new { @class = "form-control", @Required = "required", @Value = Session["FinalTripDate"], @ReadOnly = Session["FinalTripDate"],@name = "TripDate" } })
                @Html.ValidationMessageFor(model => model.TripDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartOfficeId, htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.EditorFor(model => Session["TripStart"], new { htmlAttributes = new { @class = "form-control", @Required = "required", @Value = Session["TripStart"],@ReadOnly = Session["TripStart"] } })
                @Html.ValidationMessageFor(model => model.StartOfficeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DestinationOfficeId, htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.EditorFor(model => Session["TripDestination"], new { htmlAttributes = new { @class = "form-control", @Required = "required", @Value = Session["TripDestination"], @ReadOnly = Session["TripDestination"]} })
                @Html.ValidationMessageFor(model => model.DestinationOfficeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2">Employee Id :</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Id, (IEnumerable<SelectListItem>)ViewBag.EmployeeList, new { htmlAttributes = new { @class = "form-control", @Required = "required" ,@id = "Employee"} })
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VehicleNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.VehicleNumber, (IEnumerable<SelectListItem>)ViewBag.VehicleList, new { htmlAttributes = new { @class = "form-control", @Required = "required",@id = "Vehicle" } })
                    @Html.ValidationMessageFor(model => model.VehicleNumber, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="NEXT" class="btn btn-default" />
            </div>
        </div>
    </div>
}