@{
    Layout = "~/Views/Shared/_layout_after_login.cshtml";
}
<br />
<form method="post">
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="panel-title">Change Password</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                @*<div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="~/img/DSC_1658.jpg" class="img-circle img-responsive"> </div>*@
                <div class=" col-md-9 col-lg-9 ">
                    <table width="100%" cellpadding="0" cellspacing="0">
                        <tr>
                            <td width="45%"></td>
                            <td width="10%"></td>
                            <td width="45%"></td>
                        </tr>
                        <tr>
                            <td><font size="3">Current Password</font></td>
                            <td>:</td>
                            <td><input type="password" name="Password" required/></td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td><font size="3" color="green">New Password</font></td>
                            <td>:</td>
                            <td><input type="password" name="newPassword" required/></td>
                        </tr>
                        <tr><td colspan="3"><hr /></td></tr>
                        <tr>
                            <td><font size="3" color="red">Retype New Password</font></td>
                            <td>:</td>
                            <td><input type="password" name="retypeNewPassword" required/></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Update" class="btn btn-success">
            <a href="@Url.Action("Dashboard", "Employee")">Cancel</a>
        </div>
    </div>
</div>
</form>