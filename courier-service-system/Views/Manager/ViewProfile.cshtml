@model CSSEntity.Employee
@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/_layout_for_driver.cshtml";
}

<fieldset>This is message box</fieldset>
<br />
<fieldset>
    <legend><b>PROFILE</b></legend>
    <form method="post">
        <br />
        <table width="100%" cellpadding="0" cellspacing="0">
            <tr>
                <td width="20%"><b>User Information</b></td>
                <td width="1%"></td>
                <td width="29%"></td>
                <td width="20%"><b>Contact Information</b></td>
                <td width="1%"></td>
                <td width="29%"></td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td>Name</td>
                <td>:</td>
                <td>@Model.Name</td>
                @*<td></td>*@

                <td valign="top">Email</td>
                <td valign="top">:</td>
                <td>@Model.Email</td>

            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td valign="top">Date of Birth</td>
                <td valign="top">:</td>
                <td>@Model.Birthday</td>
                <td valign="top">Phone</td>
                <td valign="top">:</td>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td>National Id</td>
                <td>:</td>
                <td>@Model.NationalId</td>
                <td valign="top">Address</td>
                <td valign="top">:</td>
                <td>@Model.Address</td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td>Change Image</td>
                <td>:</td>
                <td><input name="Image" type="file"></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>

            <tr><td width="150"><b>Offical Information</b></td></tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td valign="top">Join Date</td>
                <td valign="top">:</td>
                <td>@Model.JoinDate</td>
                <td></td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td valign="top">Position</td>
                <td valign="top">:</td>
                <td>@Model.Position</td>
                <td></td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td valign="top">Salary</td>
                <td valign="top">:</td>
                <td>@Model.Salary</td>
                <td></td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            <tr>
                <td valign="top">Office Id</td>
                <td valign="top">:</td>
                <td>@Model.OfficeId</td>
                <td></td>
            </tr>
        </table>
        <hr />
    </form>
</fieldset>
